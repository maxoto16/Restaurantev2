<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefWidth="400.0" prefHeight="300.0" stylesheets="@calificacionMeseroStyle.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.restaurantev2.CalificacionMeseroController">

    <center>
        <VBox alignment="CENTER" spacing="15.0" styleClass="calificacion-panel">
            <Label text="Califica a tu mesero" styleClass="titulo-calificacion">
                <font>
                    <Font name="Georgia Bold" size="20.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="12.0">
                <RadioButton fx:id="estrella1" toggleGroup="$estrellasGroup" text="★" styleClass="estrella-radio"/>
                <RadioButton fx:id="estrella2" toggleGroup="$estrellasGroup" text="★" styleClass="estrella-radio"/>
                <RadioButton fx:id="estrella3" toggleGroup="$estrellasGroup" text="★" styleClass="estrella-radio"/>
                <RadioButton fx:id="estrella4" toggleGroup="$estrellasGroup" text="★" styleClass="estrella-radio"/>
                <RadioButton fx:id="estrella5" toggleGroup="$estrellasGroup" text="★" styleClass="estrella-radio"/>
            </HBox>
            <TextArea fx:id="txtComentario" promptText="Escribe un comentario (opcional)" prefWidth="300.0" prefHeight="60.0"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="btnEnviar" text="Enviar" styleClass="btn-enviar"/>
                <Button fx:id="btnCancelar" text="Cancelar" styleClass="btn-cancelar"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>