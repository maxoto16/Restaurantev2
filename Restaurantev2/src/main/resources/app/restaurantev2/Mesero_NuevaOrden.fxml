<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="root" fx:id="rootPane" cache="true" cacheHint="SCALE" prefHeight="900.0" prefWidth="1600.0" styleClass="root" stylesheets="@MeseroStyle.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.restaurantev2.MeseroNuevaOrdenController">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="370.0" spacing="15" styleClass="menuscroller">
            <ImageView fx:id="imagenlogo" fitHeight="235.0" fitWidth="221.0" pickOnBounds="true" preserveRatio="true" styleClass="imagenlogo">
                <image>
                    <Image url="@images/adminlogo.png" />
                </image>
            </ImageView>
            <Label fx:id="lblTitulo1" alignment="CENTER" prefHeight="60.0" prefWidth="370.0" styleClass="TITULOMENU" text="MESERO" />
            <VBox alignment="TOP_CENTER" prefHeight="448.0" prefWidth="375.0" spacing="30.0" styleClass="cajamenu">
                <Button fx:id="btnHorariolaboral" prefHeight="85.0" prefWidth="370.0" styleClass="button" text="Inicio" />
                <Button fx:id="btnMesasasignadas" prefHeight="85.0" prefWidth="370.0" styleClass="button" text="Nueva Orden" />
                <Button fx:id="btnTomarorden" prefHeight="85.0" prefWidth="370.0" styleClass="button" text="Cobrar Orden" />
            </VBox>
            <Button fx:id="btnSalir" prefHeight="80.0" prefWidth="250.0" styleClass="button" text="Salir" />
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_CENTER" cache="true" cacheHint="SCALE" prefHeight="900.0" prefWidth="1230.0" spacing="28" styleClass="inicioMesero">
         <VBox prefHeight="869.0" prefWidth="1190.0" spacing="30.0" styleClass="cajapanel">
            <children>
                  <Label fx:id="lblTitulo" alignment="CENTER" prefHeight="77.0" prefWidth="1161.0" styleClass="TITULOPANEL" text="TOMAR NUEVA CUENTA" />
      
                  <HBox alignment="CENTER_LEFT" prefHeight="116.0" prefWidth="1230.0" spacing="18" style="-fx-padding: 16;">
                      <ComboBox fx:id="comboMesasAsignadas" prefHeight="80.0" prefWidth="324.0" promptText="Selecciona Mesa Asignada" />
                      <Button fx:id="btnCrearCuenta" prefHeight="80.0" prefWidth="304.0" text="Crear Cuenta" />
                      <Button fx:id="btnEnviarACocina" prefHeight="80.0" prefWidth="310.0" text="Enviar a Cocina" />
                  </HBox>
      
                  <HBox alignment="TOP_CENTER" spacing="48">
                      <VBox alignment="TOP_CENTER" spacing="10">
                          <Label fx:id="lblTitulo2" alignment="CENTER" prefHeight="70.0" prefWidth="627.0" styleClass="TITULOPANEL" text="MENÚ DE PLATILLOS" />
                          <TableView fx:id="tablaPlatillos" prefHeight="420.0" prefWidth="639.0">
                              <columns>
                                  <TableColumn fx:id="colNombrePlatillo" prefWidth="217.3333740234375" text="Platillo" />
                                  <TableColumn fx:id="colPrecioPlatillo" prefWidth="166.6666259765625" text="Precio" />
                                  <TableColumn fx:id="colCategoriaPlatillo" prefWidth="238.0" text="Categoría" />
                              </columns>
                          </TableView>
                      </VBox>
                      <VBox alignment="TOP_CENTER" spacing="10">
                          <Label fx:id="lblTitulo21" alignment="CENTER" prefHeight="70.0" prefWidth="492.0" styleClass="TITULOPANEL" text="DETALLES DE CUENTA" />
                          <TableView fx:id="TablaDetallesDeCuenta" prefHeight="420.0" prefWidth="400.0">
                              <columns>
                                  <TableColumn fx:id="colPlatilloAgregadoAcuenta" prefWidth="135.0" text="Platillo" />
                                  <TableColumn fx:id="colPrecioPlatilloEncuenta" prefWidth="140.6666259765625" text="Precio" />
                                  <TableColumn fx:id="colNumeroMesaCuenta" prefWidth="200.0" text="Mesa Cuenta" />
                              </columns>
                          </TableView>
                      </VBox>
                  </HBox>
      
                  <HBox alignment="BASELINE_CENTER" prefHeight="85.0" prefWidth="1186.0" spacing="200.0" style="-fx-padding: 10;">
                      <Button fx:id="btnAñadirPlatilloACuentaDetalles" prefHeight="70.0" prefWidth="368.0" text="Añadir Platillo" />
                      <Button fx:id="btnEliminarPlatilloDetalleCuenta" prefHeight="70.0" prefWidth="328.0" text="Eliminar Platillo" />
                  </HBox>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <opaqueInsets>
               <Insets left="40.0" right="40.0" />
            </opaqueInsets>
         </VBox>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
        </VBox>
    </center>
</BorderPane>
