<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="Estadisticas" fx:id="rootPane" prefHeight="900" prefWidth="1600" styleClass="root" stylesheets="@estadisticasStyle.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.restaurantev2.EstadisticasController">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="340.0" spacing="10" styleClass="vbox">
            <ImageView fx:id="logoImage" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                <image>
                    <Image url="@images/adminlogo.png" />
                </image>
            </ImageView>
            <Label fx:id="adminName" alignment="CENTER" prefWidth="230" styleClass="admin-label" text="ADMINISTRADOR" />
            <VBox alignment="TOP_CENTER" spacing="12" styleClass="menu-box">
                <Button fx:id="btnMesas" alignment="BASELINE_LEFT" contentDisplay="CENTER" graphicTextGap="15" prefHeight="55.0" prefWidth="270.0" styleClass="button" text="Mesas">
                    <graphic>
                        <ImageView fx:id="iconMesas" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                            <image>
                                <Image url="@images/mesasicono.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnEstadisticas" alignment="BASELINE_LEFT" contentDisplay="CENTER" graphicTextGap="15" prefHeight="55.0" prefWidth="270.0" styleClass="button" text="Estadisticas">
                    <graphic>
                        <ImageView fx:id="iconEstadisticas" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                            <image>
                                <Image url="@images/Estadisticasicono.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnCategorias" alignment="BASELINE_LEFT" contentDisplay="CENTER" graphicTextGap="15" prefHeight="55.0" prefWidth="270.0" styleClass="button" text="Categorias">
                    <graphic>
                        <ImageView fx:id="iconCategorias" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                            <image>
                                <Image url="@images/CategoriaIcono.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnPlatillos" alignment="BASELINE_LEFT" contentDisplay="CENTER" graphicTextGap="15" prefHeight="55.0" prefWidth="270.0" styleClass="button" text="Platillos">
                    <graphic>
                        <ImageView fx:id="iconPlatillos" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                            <image>
                                <Image url="@images/platillosicono.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnUsuarios" alignment="BASELINE_LEFT" contentDisplay="CENTER" graphicTextGap="15" prefHeight="55.0" prefWidth="270.0" styleClass="button" text="Usuarios">
                    <graphic>
                        <ImageView fx:id="iconUsuarios" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                            <image>
                                <Image url="@images/Usuariosico.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnSalir" alignment="BASELINE_LEFT" contentDisplay="CENTER" graphicTextGap="15" prefHeight="55.0" prefWidth="220.0" styleClass="button" text="Salir">
                    <graphic>
                        <ImageView fx:id="iconSalir" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                            <image>
                                <Image url="@images/Saliricono.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- DASHBOARD CENTRAL -->
    <center>
        <VBox prefHeight="900.0" prefWidth="1103.0" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label fx:id="lblTitulo" prefHeight="29.0" prefWidth="585.0" styleClass="titulo-admin" text="ESTADÍSTICAS DEL RESTAURANTE" />

            <HBox alignment="CENTER" spacing="18">
                <VBox alignment="CENTER" prefHeight="96.0" prefWidth="230.0" spacing="8" styleClass="card-resumen">
                    <Label styleClass="label-card" text="Total Dinero" />
                    <Label fx:id="lblTotalDinero" alignment="BASELINE_CENTER" prefHeight="31.0" prefWidth="187.0" styleClass="valor-card" />
                </VBox>
                <VBox alignment="CENTER" prefHeight="96.0" prefWidth="266.0" spacing="8" styleClass="card-resumen">
                    <Label styleClass="label-card" text="Cuentas Cerradas" />
                    <Label fx:id="lblCuentasCerradas" alignment="BASELINE_CENTER" prefHeight="31.0" prefWidth="205.0" styleClass="valor-card" />
                </VBox>
                <VBox alignment="CENTER" spacing="8" styleClass="card-resumen">
                    <Label styleClass="label-card" text="Cuentas Abiertas" />
                    <Label fx:id="lblCuentasAbiertas" alignment="BASELINE_CENTER" prefHeight="31.0" prefWidth="119.0" styleClass="valor-card" />
                </VBox>
                <VBox alignment="CENTER" spacing="8" styleClass="card-resumen">
                    <Label styleClass="label-card" text="Solicitudes Modificación" />
                    <Label fx:id="lblSolicitudesModificacion" alignment="BASELINE_CENTER" prefHeight="31.0" prefWidth="183.0" styleClass="valor-card" />
                </VBox>
            </HBox>
             <HBox alignment="CENTER" spacing="14">
                 <Label prefHeight="21.0" prefWidth="144.0" styleClass="label-fecha" text="Filtrar por fecha:" />
                 <DatePicker fx:id="datePickerInicio" promptText="Inicio" style="-fx-border-radius: 5; -fx-background-radius: white; -fx-border-radius: 2 2 2 2; -fx-background-color: white;" />
                 <Label text=" - " />
                 <DatePicker fx:id="datePickerFin" promptText="Fin" style="-fx-background-color: white;" />
                 <Button fx:id="btnFiltrar" prefHeight="39.0" prefWidth="112.0" styleClass="btn-filtrar" text="Filtrar" />
             </HBox>

            <Label styleClass="subtitulo-admin" text="Detalles de Cuentas (por fecha)">
                <font>
                    <Font size="19.0" />
                </font>
            </Label>

            <TableView fx:id="tablaDetallesDinero" cacheShape="true" fixedCellSize="30.0" focusTraversable="true" prefHeight="354.0" prefWidth="900.0" tableMenuButtonVisible="true">
                <columns>
                    <TableColumn fx:id="colFechaCuenta" editable="false" prefWidth="140.0" text="Fecha" />
                    <TableColumn fx:id="colMesaCuenta" prefWidth="80.0" text="Mesa" />
                    <TableColumn fx:id="colMeseroCuenta" prefWidth="155.0" text="Mesero" />
                    <TableColumn fx:id="colTotalCuenta" prefWidth="120.0" text="Total $" />
                    <TableColumn fx:id="colEstadoCuenta" prefWidth="94.0" text="Estado" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
