<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" prefHeight="900.0" prefWidth="1600.0" stylesheets="@modificacion.css"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.restaurantev2.ModificacionController">

    <top>
        <Label fx:id="lblTitulo" alignment="CENTER" prefHeight="70.0" prefWidth="1600.0" text="MODIFICACIÓN DE CUENTA" />
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefWidth="1200.0" spacing="18">
            <HBox spacing="24">
                <Label fx:id="lblMesa" text="Mesa: " />
                <Label fx:id="lblEstado" text="Estado: " />
            </HBox>
            <HBox spacing="32" alignment="CENTER">
                <!-- Tabla de detalles de cuenta -->
                <VBox>
                    <Label text="Detalles de Cuenta" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <TableView fx:id="tablaDetallesCuenta" prefHeight="300.0" prefWidth="540.0">
                        <columns>
                            <TableColumn fx:id="colPlatillo" prefWidth="220.0" text="Platillo" />
                            <TableColumn fx:id="colCantidad" prefWidth="100.0" text="Cantidad" />
                            <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio" />
                        </columns>
                    </TableView>
                    <HBox spacing="12" alignment="CENTER">
                        <Button fx:id="btnEditarPlatillo" prefWidth="140.0" text="Editar Platillo" />
                        <Button fx:id="btnEliminarPlatillo" prefWidth="140.0" text="Eliminar Platillo" />
                    </HBox>
                </VBox>
                <!-- Tabla del menú para agregar platillos -->
                <VBox>
                    <Label text="Menú de Platillos" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <TableView fx:id="tablaMenuPlatillos" prefHeight="300.0" prefWidth="540.0">
                        <columns>
                            <TableColumn fx:id="colNombreMenuPlatillo" prefWidth="220.0" text="Platillo" />
                            <TableColumn fx:id="colPrecioMenuPlatillo" prefWidth="100.0" text="Precio" />
                            <TableColumn fx:id="colCategoriaMenuPlatillo" prefWidth="150.0" text="Categoría" />
                        </columns>
                    </TableView>
                    <HBox spacing="12" alignment="CENTER">
                        <Button fx:id="btnAgregarPlatillo" prefWidth="180.0" text="Agregar Platillo Seleccionado" />
                    </HBox>
                </VBox>
            </HBox>
            <HBox spacing="16" alignment="CENTER">
                <Button fx:id="btnEnviarModificacion" prefWidth="220.0" style="-fx-font-weight:bold;" text="Enviar Modificación" />
                <Button fx:id="btnRegresar" prefWidth="220.0" text="Regresar" />
            </HBox>
        </VBox>
    </center>
</BorderPane>